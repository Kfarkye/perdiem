{
  "version": 2,
  "regions": ["sfo1"],
  "framework": "nextjs",
  "redirects": [
    {
      "source": "/market/(.*)/",
      "destination": "/market/$1",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/api/v1/lookup-stipend",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "https://perdiem.fyi"
        }
      ]
    }
  ]
}
